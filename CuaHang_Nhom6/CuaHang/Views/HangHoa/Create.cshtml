@model CuaHang.Models.HangHoa

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<h2 class="text-center">Tạo mới Hàng hoá</h2>

<form style="max-width: 500px" class="was-validated m-auto" asp-action="Create" method="post">
    <div class="form-floating my-3">
        @Html.TextBoxFor(model => model.TenHH, new { @class = "form-control", placeholder = "", required = "required" })
        <label for="TenHH">Tên sản phẩm</label>
    </div>

    <div class="form-floating my-3">
        @Html.DropDownListFor(model => model.MaLH, (SelectList)ViewBag.MaLH, new { @class = "form-select" })
        <label for="MaLH">Loại hàng hoá</label>
    </div>

    <div class="form-floating my-3">
        @Html.TextBoxFor(model => model.Gia, new { @class = "form-control", type = "number", placeholder = "", required = "required" })
        <label for="Gia">Giá</label>
    </div>

    <div class="form-floating my-3">
        @Html.TextBoxFor(model => model.SLTon, new { @class = "form-control", type = "number", placeholder = "", required = "required" })
        <label for="SLTon">Số lượng tồn</label>
    </div>

    <div class="form-floating my-3">
        @Html.TextBoxFor(model => model.DonVi, new { @class = "form-control", placeholder = "", required = "required" })
        <label for="DonVi">Đơn vị</label>
    </div>

    <button type="submit" class="btn btn-primary w-25">Tạo</button> |
    <a class="btn text-primary" href="/HangHoa/Index">Quay lại</a>
</form>
