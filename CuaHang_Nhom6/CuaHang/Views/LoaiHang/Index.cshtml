@model IEnumerable<CuaHang.Models.LoaiHang>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<h2 class="text-center">Danh sách Hàng hoá</h2>

<div class="d-flex justify-content-between">
    <a class="btn btn-primary" href="/LoaiHang/Create">Tạo mới</a>

    <form action="/LoaiHang/Index" method="post">
        <input name="txtSearch" class="form-control" type="search" placeholder="Tìm kiếm..." />
    </form>
</div>

<div class="row row-cols-2 row-cols-sm-3 row-cols-md-4 row-cols-lg-5">
    @foreach (var item in Model)
    {
        <div class="col py-3">
            <div class="shadow p-3">
                <h4 style="height: 64px">
                    <a class="text-decoration-none" href="/LoaiHang/Details/@item.MaLH">@item.TenLH</a>
                </h4>
                <a class="btn text-primary" href="/LoaiHang/Edit/@item.MaLH">Sửa</a> |
                <a class="btn text-primary" href="/LoaiHang/Delete/@item.MaLH">Xoá</a>
            </div>
        </div>
    }
</div>
