<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <!-- Header -->
    <header class="bg-primary text-white p-3">
        <div class="container">
            <h1 class="display-6">Web Demo</h1>
            <nav class="navbar navbar-expand-lg navbar-dark">
                @Html.ActionLink("Trang Chủ", "Index", "HangHoa", null, new { @class = "navbar-brand" })
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="#">Sản Phẩm</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Giới Thiệu</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Liên Hệ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Đăng Nhập</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    </header>

    <!-- Main Content -->
    <div class="container my-4">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-white text-center p-3">
        <div class="container">
            <p>&copy; 2024 Web - All rights reserved.</p>
            <p><a href="#" class="text-white">Facebook</a>&nbsp;&nbsp; | &nbsp;&nbsp;<a href="#" class="text-white">Gmail</a>&nbsp;&nbsp; | &nbsp;&nbsp;<a href="#" class="text-white">Chính sách bảo mật</a>&nbsp;&nbsp; | &nbsp;&nbsp;<a href="#" class="text-white">Điều khoản sử dụng</a></p>
        </div>
    </footer>

    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
</body>
</html>